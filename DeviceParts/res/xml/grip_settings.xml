<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <SwitchPreference
        android:key="grip_switch"
        android:summaryOn="@string/grip_category_on"
        android:summaryOff="@@string/grip_category_off"
        android:persistent="false" />

    <com.android.settingslib.widget.LayoutPreference
        android:layout="@layout/grip_tutorial"
        android:selectable="false"
        android:key="tutorial_grip"/>

    <PreferenceCategory
        android:key="key_trigger_category"
        android:title="@string/category_airtrigger">

    <ListPreference
        android:key="grip_mode_key"
        android:title="@string/grip_squeeze_title"
        android:entries="@array/grip_squeeze_entries"
        android:entryValues="@array/grip_squeeze_values"
        android:persistent="true" />
    </PreferenceCategory>

    <Preference
        android:key="grip_tap_category"
        android:title="@string/category_grip_tap_force"
        android:persistent="false" >
        <intent android:action="android.intent.action.MAIN"
                android:targetPackage="org.omnirom.device"
                android:targetClass="org.omnirom.device.GripTapForceActivity" />
    </Preference>

</PreferenceScreen>
